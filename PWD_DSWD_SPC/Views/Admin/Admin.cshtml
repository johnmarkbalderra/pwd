<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    //bar graph analytics
    document.addEventListener('DOMContentLoaded', function () {
        const disabilityData = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(ViewBag.DisabilityCounts));
        const labels = disabilityData.map(d => d.DisabilityType || "Unknown");
        const data = disabilityData.map(d => d.Count);

        const ctx = document.getElementById('disabilityChart').getContext('2d');
        new Chart(ctx, {
            type: 'bar',
            data: {
                labels: labels,
                datasets: [{
                    label: 'Number of Users',
                    data: data,
                    backgroundColor: '#0E2C95',
                    borderColor: 'rgba(75, 192, 192, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true, // Ensure chart maintains aspect ratio when resizing
                plugins: {
                    legend: {
                        display: true,
                        position: 'top',
                    }
                },
                scales: {
                    x: {
                        title: {
                            display: true,
                            text: 'Disability Type'
                        },
                        grid: {
                            offset: true
                        }
                    },
                    y: {
                        title: {
                            display: true,
                            text: 'User Count'
                        },
                        beginAtZero: true,  // Do not start at zero
                        min: 1,              // Start y-axis at 1
                        stepSize: 0.5,         // Increment by 1
                        suggestedMax: Math.max(...data) + 0.5,  // To ensure it adjusts correctly
                        ticks: {
                            // Force integer tick marks
                            callback: function (value) {
                                return Number.isInteger(value) ? value : '';  // Show only whole numbers
                            }
                        }
                    }
                }
            }
        });
    });

    //analytics for establishment
    document.addEventListener('DOMContentLoaded', function () {
        // Attach click event to dynamically populate modal data
        document.querySelectorAll('.view-branches-btn').forEach(button => {
            button.addEventListener('click', function () {
                const establishmentName = this.getAttribute('data-establishment');
                document.getElementById('branch-modal-title').textContent = establishmentName;

                // Fetch and populate branch data using AJAX (example structure)
                fetch(`/Admin/GetBranches?establishmentName=${encodeURIComponent(establishmentName)}`)
                    .then(response => response.json())
                    .then(data => {
                        const tbody = document.getElementById('branch-modal-body');
                        tbody.innerHTML = ''; // Clear old data

                        data.forEach(branch => {
                            const row = document.createElement('tr');
                            row.innerHTML = `
                                            <td>${branch.BranchName}</td>
                                            <td>${branch.Count}</td>
                                            <td>${branch.TotalVisits}</td>
                                        `;
                            tbody.appendChild(row);
                        });
                    })
                    .catch(error => console.error('Error fetching branch data:', error));
            });
        });
    });
</script>

